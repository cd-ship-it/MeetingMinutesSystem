# Copy to .env and fill in values. Do not commit .env.

APP_ENV=development
APP_URL=http://localhost:8888/MeetingMinutesSystem/public

# Database — config/config.php reads DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD
DB_HOST=127.0.0.1
DB_PORT=8889
DB_NAME=crossp11_db1
DB_USER=root
DB_PASSWORD=root

# If MySQL uses a Unix socket (e.g. MAMP), set DB_SOCKET instead of host/port:
# DB_SOCKET=/tmp/mysql.sock
# (comment out or leave DB_HOST/DB_PORT empty when using socket)

# Production often uses port 3306; set DB_* on server in .env (do not commit .env)

# Upload directory for meeting minutes files (default: project /uploads). Use absolute path or path relative to project root.
# UPLOAD_DIR=uploads

# Google OAuth (required for admin in development and production)
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...
# Or use GOOGLE_CREDENTIALS_PATH=/path/to/client_secret_*.json
# In Google Cloud Console, add Authorized redirect URI: {APP_URL}/admin/oauth-callback.php (for both local and production)
# Admin access restricted to this email domain (default: crosspointchurchsv.org)
# ADMIN_ALLOWED_EMAIL_DOMAIN=crosspointchurchsv.org

# OpenAI (optional; used when USE_AI_FOR_MINUTES_SUMMARY=1)
# OPENAI_API_KEY=sk-...
# Optional: override the prompt sent to OpenAI for 3-bullet summary (default in config/config.php).
# Use XXX in the prompt as placeholder for max summary word count (e.g. "in no more than XXX words").
# OPENAI_SUMMARY_PROMPT=Summarize the following meeting minutes in exactly 3 bullet points, in no more than XXX words...
# Max summary length as percent of minutes word count (default 30). Summary cap = minutes words × this / 100.
# OPENAI_SUMMARY_MAX_PERCENT=30

# AI summary for meeting minutes (1 = on, 0 = off). Default on if unset.
# USE_AI_FOR_MINUTES_SUMMARY=1
